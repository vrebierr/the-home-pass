div(ng-include='"components/navbar/navbar.html"')

.form-box
    .header Se connecter
    form(name='form', ng-submit='login(form)', novalidate='')
        .body.bg-gray
            .form-group
                input.form-control(type='email', name='email', ng-model='user.email', placeHolder='Adresse Email', required='')
            .form-group
                input.form-control(type='password', name='password', ng-model='user.password', placeHolder='Mot de passe', required='')
        .footer
            button.btn.bg-olive.btn-block(type='submit') Connexion
            a(ui-sref='signupAdvertiser()') Inscription
