div(ng-include='"components/navbar/navbar.html"')

.container
	.row
		.col-md-6
			h3 Ajouter un point de vente
			form(enctype='multipart/form-data', name='form')
				.form-group
					label Nom
					input.form-control(type='text', ng-model='selected.name', required='')
				.form-group
					label Adresse
					input.form-control#search(type='text', ng-model='selected.address', required='')
				.form-group
					label Image
					input(type='file', ng-file-select='onFileSelect($files)', accept='image/*')
				.form-group
					label Informations
					textarea.form-control(ng-model='selected.info', rows='5', required='')

				input.btn.btn-primary(ng-click='send(form)', type='submit', value="{{ selected._id && 'Modifier' || 'Ajouter'}}")
				span.btn.btn-danger.pull-right(ng-if='selected._id', ng-click='confirmation(selected.name)') Supprimer
		.col-md-6
			br
			br
			br
			br
			ui-gmap-google-map(center='map.center', zoom='map.zoom', control='googleMap')
				ui-gmap-marker(ng-repeat='item in pos', idKey='item._id', coords='item')
