div(ng-include='"components/navbar/navbar.html"')

.img-header

.row.container.margin-top
    .columns.small-12.medium-8.large-8
        .row(ng-repeat='post in posts')
            img(ng-src='uploads/images/')
            span {{post.createdAt | 'dd.mm.yyyy'}}
            h4(ui-sref='post({slug: post.slug})') {{post.title}}
            
            div(ng-bind-html='post.content')
    .columns.small-12.medium-4.large-4
        div(ng-include='"components/sidebar/blog.html"')
