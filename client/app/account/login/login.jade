div(ng-include='"components/navbar/navbar.html"')

.form-box
    .header Se connecter
    form(name='form', ng-submit='login(form)', novalidate='')
        .body.bg-gray
            .form-group
                input.form-control(type='text', name='email', ng-model='user.email', placeHolder='Email')
            .form-group
                input.form-control(type='password', name='password', ng-model='user.password', placeHolder='Mot de passe')
        .footer
            button.btn.bg-olive.btn-block(type='submit') Connexion
            a(ui-sref='signup()') Inscription
