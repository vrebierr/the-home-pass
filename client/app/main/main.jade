div(ng-include='"components/navbar/navbar.html"')

.container-fluid.max-height
    .row.max-height
        .col-md-6.max-height
            .max-height#map
        .col-md-6
            h3.page-header Annonces:
            .input-group.form-inline
                input.form-control.input-sm(type='text', ng-model='search')
                span.input-group-btn
                    button.btn.btn-sm.btn-default
                        i.fa.fa-search
                select.form-control.input-sm(ng-model='category', ng-options='category._id as category.name for category in categories')
                    option(value='') Tous les univers
            .row(ng-repeat='ad in ads | filter:search | filter:category')
                h3 {{ad.name}}
                em {{ad.address}}
                p {{ad.info}}

marker(ng-repeat='item in pos', map='map', type='google', pos='[item.lat, item.lng]', click='clickMarker(item)', item='item')
