div(ng-include='"components/navbar/navbar.html"')

.wrapper.row-offcanvas.row-offcanvas-left
    aside.left-side.sidebar-offcanvas
        div(ng-include='"components/sidebar/sidebar.html"')
    aside.right-side
        section.content-header
            h1 Newsletter
        section.content
            .row
                .col-xs-12
                    .box
                        .box-header
                            h3.box-title Envoyer une newsletter
                        .box-body.table-responsible
                            .input-form
                                label Objet
                                input.form-control(type='text', ng-model='newsletter.object', required='')
                            .input-form
                                label Message
                                textarea.form-control(type='text', ng-model='newsletter.message', required='')
                        .box-footer.clearfix
                            button.btn.btn-primary.pull-right(ng-click='send()') Envoyer

